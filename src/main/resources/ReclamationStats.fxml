<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.pidev.controllers.ReclamationStatsController">
    <BarChart fx:id="barChart" layoutX="30.0" layoutY="30.0" prefHeight="200.0" prefWidth="300.0">
        <xAxis>
            <CategoryAxis label="Reclamations" />
        </xAxis>
        <yAxis>
            <NumberAxis label="Count" />
        </yAxis>
    </BarChart>

    <PieChart fx:id="pieChart" layoutX="330.0" layoutY="30.0" prefHeight="200.0" prefWidth="250.0" />

    <Button layoutX="250.0" layoutY="300.0" prefHeight="25.0" prefWidth="100.0" text="Close" onAction="#closeStats" />
</AnchorPane>
